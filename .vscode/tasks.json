{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "[Lab1] compile",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/threads"
            }
        },
        {
            "label": "[Lab1] Clean",
            "group": "build",
            "type": "shell",
            "command": "make clean",
            "options": {
                "cwd": "${workspaceFolder}/threads"
            }
        },
        {
            "label": "[Lab1] Test",
            "group": "test",
            "type": "shell",
            "command": "make check",
            "options": {
                "cwd": "${workspaceFolder}/threads/build"
            }
        },
        {
            "label": "[Lab2] compile",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/userprog"
            }
        },
        {
            "label": "[Lab2] Clean",
            "group": "build",
            "type": "shell",
            "command": "make clean",
            "options": {
                "cwd": "${workspaceFolder}/userprog"
            }
        },
        {
            "label": "[Lab2] Test",
            "group": "test",
            "type": "shell",
            "command": "make check",
            "options": {
                "cwd": "${workspaceFolder}/userprog/build"
            }
        },
        {
            "label": "[Program] compile",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/examples"
            }
        },
        {
            "label": "[Program] Clean",
            "group": "build",
            "type": "shell",
            "command": "make clean",
            "options": {
                "cwd": "${workspaceFolder}/examples"
            }
        },
        {
            "label": "[Utils] Compile",
            "group": "build",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/utils"
            }
        },
        {
            "label": "[Lab1] Use Default Scheduler",
            "type": "shell",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": ".",
                    }
                }
            ],
            "dependsOn": [
                "[Lab1] compile"
            ],
            "command": "../../utils/pintos",
            "args": [
                "-v",
                "-k",
                "--gdb",
                "--",
                "run",
                "${input:lab1_default_test_name}",
            ],
            "options": {
                "cwd": "${workspaceFolder}/threads/build"
            }
        },
        {
            "label": "[Lab1] Use Advance Scheduler",
            "type": "shell",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": ".",
                    }
                }
            ],
            "dependsOn": [
                "[Lab1] compile"
            ],
            "command": "../../utils/pintos",
            "args": [
                "-v",
                "-k",
                "--gdb",
                "--",
                "-mlfqs",
                "run",
                "${input:lab1_mlfqs_test_name}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/threads/build"
            }
        },
        {
            "label": "[Lab2] Run Test",
            "type": "shell",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": ".",
                    }
                }
            ],
            "dependsOn": [
                "[Lab2] compile",
            ],
            "command": "./run_test.sh",
            "args": [
                "${input:lab2_test_name}",
            ],
            "options": {
                "cwd": "${workspaceFolder}/userprog"
            }
        },
        {
            "label": "[Lab2] Run Program",
            "type": "shell",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": ".",
                    }
                }
            ],
            "dependsOn": [
                "[Lab2] compile",
                "[Program] compile"
            ],
            "command": "../../utils/pintos",
            "args": [
                "-v",
                "-k",
                "--gdb",
                "--filesys-size=2",
                "-p",
                "../../examples/${input:program_name}",
                "-a",
                "${input:program_name}",
                "--",
                "-f",
                "-q",
                "run",
                "'${input:program_cli}'"
            ],
            "options": {
                "cwd": "${workspaceFolder}/userprog/build"
            }
        }
    ],
    "inputs": [
        {
            "id": "lab1_default_test_name",
            "type": "pickString",
            "options": [
                "alarm-single",
                "alarm-multiple",
                "alarm-simultaneous",
                "alarm-priority",
                "alarm-zero",
                "alarm-negatve",
                "priority-change",
                "priority-donate-one",
                "priority-donate-multiple",
                "priority-donate-multiple2",
                "priority-donate-nest",
                "priority-donate-sema",
                "priority-donate-lower",
                "priority-donate-chain",
                "priority-fifo",
                "priority-preempt",
                "priority-sema",
                "priority-condvar",
            ],
            "description": "Lab1 Test to Debug"
        },
        {
            "id": "lab1_mlfqs_test_name",
            "type": "pickString",
            "options": [
                "mlfqs-block",
                "mlfqs-load-1",
                "mlfqs-load-60",
                "mlfqs-load-avg",
                "mlfqs-recent-1",
                "mlfqs-fair-2",
                "mlfqs-fair-20",
                "mlfqs-nice-2",
                "mlfqs-nice-20",
            ],
            "description": "Lab1 Test to Debug"
        },
        {
            "id": "lab2_test_name",
            "type": "pickString",
            "options": [
                "args-none",
                "args-single",
                "args-multiple",
                "args-many",
                "args-dbl-space",
                "sc-bad-sp",
                "sc-bad-arg",
                "sc-boundary",
                "sc-boundary-2",
                "sc-boundary-3",
                "halt",
                "exit",
                "create-normal",
                "create-empty",
                "create-null",
                "create-bad-ptr",
                "create-long",
                "create-exists",
                "create-bound",
                "open-normal",
                "open-missing",
                "open-boundary",
                "open-empty",
                "open-null",
                "open-bad-ptr",
                "open-twice",
                "close-normal",
                "close-twice",
                "close-stdin",
                "close-stdout",
                "close-bad-fd",
                "read-normal",
                "read-bad-ptr",
                "read-boundary",
                "read-zero",
                "read-stdout",
                "read-bad-fd",
                "write-normal",
                "write-bad-ptr",
                "write-boundary",
                "write-zero",
                "write-stdin",
                "write-bad-fd",
                "exec-once",
                "exec-arg",
                "exec-bound",
                "exec-bound-2",
                "exec-bound-3",
                "exec-multiple",
                "exec-missing",
                "exec-bad-ptr",
                "wait-simple",
                "wait-twice",
                "wait-killed",
                "wait-bad-pid",
                "multi-recurse",
                "multi-child-fd",
                "rox-simple",
                "rox-child",
                "rox-multichild",
                "bad-read",
                "bad-write",
                "bad-read2",
                "bad-write2",
                "bad-jump",
                "bad-jump2"
            ],
            "description": "Lab2 Test to Debug"
        },
        {
            "id": "program_name",
            "type": "promptString",
            "description": "name of program to debug"
        },
        {
            "id": "program_cli",
            "type": "promptString",
            "description": "debug cli"
        }
    ]
}