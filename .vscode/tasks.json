{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "[Lab1] compile",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/threads"
            }
        },
        {
            "label": "[Lab2] compile",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/userprog"
            }
        },
        {
            "label": "[Lab1] Run In Default Scheduler",
            "type": "shell",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": ".",
                    }
                }
            ],
            "dependsOn": [
                "[Lab1] compile"
            ],
            "command": "../../utils/pintos -v -k --gdb -- run ${input:test_name}",
            "options": {
                "cwd": "${workspaceFolder}/threads/build"
            }
        },
        {
            "label": "[Lab1] Run In Advance Scheduler",
            "type": "shell",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": ".",
                    }
                }
            ],
            "dependsOn": [
                "[Lab1] compile"
            ],
            "command": "../../utils/pintos -v -k --gdb -- -mlfqs run ${input:test_name}",
            "options": {
                "cwd": "${workspaceFolder}/threads/build"
            }
        },
        {
            "label": "[Lab2] Run",
            "type": "shell",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": ".",
                    }
                }
            ],
            "dependsOn": [
                "[Lab2] compile"
            ],
            "command": "../../utils/pintos -v -k --gdb -- run ${input:test_name}",
            "options": {
                "cwd": "${workspaceFolder}/userprog/build"
            }
        }  
    ],
    "inputs": [
        {
            "id": "test_name",
            "type": "promptString",
            "description": "Name of the Test to Debug"
        }
    ]
}